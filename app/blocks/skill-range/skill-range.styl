.skill-range
	background none
	border none
	box-shadow none
	.noUi-horizontal, .noUi-handle
		background none
		border none
		box-shadow none
		&:before
			right 0
			left 50%
			width 17px
			height 14px
			transform translateX(-50%)
			background none
			background-image url('../images/slide-icon.png')
			background-repeat no-repeat
		&:after
			display none
	&__line
		position absolute
		bottom 0
		width 100%
		height 3px
		background #000
@media (max-width: 720px)
	.skill-range
		width 20px
		height 200px
		.noUi-horizontal, .noUi-handle
			&:before
				top 11px
				left 0
				transform rotate(30deg)
		&__line
			top 0
			right 0
			width 3px
			height 100%