.secret
	position relative
	display flex
	width 252px
	height 106px
	&__background
		position absolute
		top -14px
		left 60px
		width 100%
		max-width 252px
		height 106px
		background-image url('../images/secret.png')
		background-repeat no-repeat
		background-size contain
@media (max-width: 920px)
	.secret
		&__background
			position static
@media (max-width: 480px)
	.secret
		max-width 150px
		justify-content flex-end