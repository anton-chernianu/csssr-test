.profile
	&__container
		content_container()
		padding-top 58px
	&__item
		margin-bottom 39px
		display flex
	&__title
		position relative
		PTSansBold()
		font-size 23px
		white-space nowrap 
		letter-spacing -.4px
	&__input-block
		position relative
		margin-top -18px
		margin-right 4px
		margin-left 4px
		width 100%
		&:after
			position absolute
			right 0
			bottom 0
			width 98%
			height 2px
			content ''
			background-color #000
	&__input
		padding-left 15px
		width 100%
		CourierNew()
		font-size 29px
		letter-spacing .5px
		background none
		border none
		&_name
			padding-left 29px
		&_year
			padding-left 26px
		&_address
			padding-left 28px
		&_skype
			padding-top 3px
			padding-left 24px
		&_email
			padding-top 2px
			padding-left 26px
@media (max-width: 720px)
	.profile
		&__container
			padding-top 20px
		&__title
			padding-left 5px
		&__input-block
			margin-top 10px	
			margin-bottom 5px
			&:after
				width 100%
		&__item
			flex-flow column wrap
			margin-bottom 5px
		&__input
			padding-left 5px	
@media (max-width: 480px)
	.profile
		&__input
			font-size 20px