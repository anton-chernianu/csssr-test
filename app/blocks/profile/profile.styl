.profile
	
	&__container
		content_container()
		padding-top 58px
	
	&__item
		margin-bottom 38px
		display flex

	&__title
		PTSansBold()
		position relative
		font-size 23px
		white-space nowrap 
		// padding-right 12px
		letter-spacing -.4px
	
	&__input-block
		position relative
		margin-top -18px
		margin-right 4px
		margin-left 4px
		width 100%
		
		&:after
			position absolute
			right 0
			bottom 0
			width 98%
			height 2px
			content ''
			background-color #000

	&__input
		padding-left 15px
		width 100%
		CourierNew()
		font-size 29px
		letter-spacing .5px
		background none
		border none
		&_name
			padding-left 10px
		&_year
			padding-left 26px
		&_address
			padding-left 28px
		&_skype
			padding-top 5px
			padding-left 24px
		&_email
			padding-top 6px
			padding-left 26px
			
