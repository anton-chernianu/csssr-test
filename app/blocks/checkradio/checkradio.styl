.checkradio
	margin 10px 0
	margin-right 20px
	&__label
		PTSansBold()
		font-size 20px
		letter-spacing .2px
	&__input:not(:checked),
	&__input:checked
		position absolute
		left -9999px
	&__input:not(:checked) + &__label,
	&__input:checked + &__label
		position relative
		padding-left 32px
		cursor pointer
		user-select none
	&__input:not(:checked) + &__label:before,
	&__input:checked + &__label:before
		position absolute
		top 0
		left 0 
		width 28px
		height 28px
		content ''
		background-image url('../images/radio.png')
		background-repeat no-repeat
	&__input:not(:checked) + &__label:after,
	&__input:checked + &__label:after
		position absolute
		z-index 10
		top 7px
		left 7px
		width 14px
		height 14px
		line-height .8
		content ''
		background-image url('../images/radio-check.png')
		background-repeat no-repeat
		transition all .2s
	&__input:not(:checked) + &__label:after
		opacity 0
		transform scale(0)
	&__input:checked + &__label:after 
		opacity 1
		transform scale(1)