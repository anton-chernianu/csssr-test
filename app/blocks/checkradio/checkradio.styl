.radio-input
	&:not(:checked),
	&:checked
		position absolute
		left -9999px
	&:not(:checked) + .radio-label,
	&:checked + .radio-label
		position relative
		padding-left 32px
		cursor pointer
		user-select none
	&:not(:checked) + .radio-label:before,
	&:checked + .radio-label:before
		position absolute
		top -2px
		left 0 
		width 28px
		height 28px
		content ''
		background-image url('../images/radio.png')
		background-repeat no-repeat
	&:not(:checked) + .radio-label:after,
	&:checked + .radio-label:after
		position absolute
		z-index 10
		top 5px
		left 7px
		width 14px
		height 14px
		line-height .8
		content ''
		background-image url('../images/radio-check.png')
		background-repeat no-repeat
		transition all .2s
	&:not(:checked) + .radio-label:after
		opacity 0
		transform scale(0)
	&:checked + .radio-label:after 
		opacity 1
		transform scale(1)
.radio-label
	margin-right 20px
	margin-bottom 10px
	PTSansBold()
	font-size 20px
	letter-spacing .2px