import('sprites/*')
import('helpers/svg-size')
@import 'helpers/variables'
@import 'helpers/mixins'
@import 'helpers/fonts'
@import 'helpers/optimize'

// Main Setting
body__bg_color = #797979
main__bg_color = #ecd09e

body
	font-size 16px
	background-color body__bg_color
	padding-top 2px
	line-height 23px
	letter-spacing -.53px

p
	PTSansRegular()
	padding-top 2px
	line-height 23px
	letter-spacing -.53px

main
	max-width 1000px
	width 100%
	margin 0 auto
	background-color: main__bg_color
	background-image url('../images/main-bg.png')
	background-repeat repeat
	padding 60px 0 

.title
	PTSansBold()
	font-size 24px
	letter-spacing -.05px
	padding-bottom 6px

.text
	PTSansRegular()
	padding-top 2px
	line-height 23px
	letter-spacing -.53px


import('../blocks/**/*')

