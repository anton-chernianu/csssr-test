import('sprites/*')
import('helpers/svg-size')
@import 'helpers/variables'
@import 'helpers/mixins'
@import 'helpers/fonts'
@import 'helpers/optimize'

// Main Setting
body__bg_color = #797979
main__bg_color = #ecd09e
link__color = #1f5f97
link__color_hover = #d27548

body
	font-size 16px
	background-color body__bg_color
	padding-top 2px
	line-height 23px
	letter-spacing -.53px

main
	max-width 1000px
	width 100%
	margin 0 auto
	padding 60px 0 
	background-color: main__bg_color
	background-image url('../images/main-bg.png')
	background-repeat repeat
	
p
	padding-top 2px
	PTSansRegular()
	line-height 23px
	letter-spacing -.53px

a 
	color link__color
	transition-duration .5s
	&:hover
		color link__color_hover

.title
	padding-bottom 6px
	PTSansBold()
	font-size 24px
	letter-spacing -.05px

.text
	padding-top 2px
	PTSansRegular()
	line-height 23px
	letter-spacing -.53px


import('../blocks/**/*')

